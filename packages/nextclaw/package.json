{
  "name": "nextclaw",
  "version": "0.4.6",
  "description": "Lightweight personal AI assistant with CLI, multi-provider routing, and channel integrations.",
  "private": false,
  "type": "module",
  "bin": {
    "nextclaw": "dist/cli/index.js"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Peiiii/nextclaw.git"
  },
  "homepage": "https://github.com/Peiiii/nextclaw#readme",
  "bugs": {
    "url": "https://github.com/Peiiii/nextclaw/issues"
  },
  "keywords": [
    "ai",
    "assistant",
    "agent",
    "cli",
    "chatbot"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bridge",
    "ui-dist",
    "templates"
  ],
  "scripts": {
    "dev": "pnpm -C ../nextclaw-core build && pnpm -C ../nextclaw-server build && tsx src/cli/index.ts",
    "build": "pnpm -C ../nextclaw-core build && pnpm -C ../nextclaw-server build && tsup src/index.ts src/cli/index.ts --format esm --dts --out-dir dist && node scripts/copy-ui-dist.mjs",
    "start": "node dist/cli.js",
    "lint": "eslint .",
    "tsc": "tsc -p tsconfig.json",
    "test": "vitest"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "nextclaw-core": "^0.4.4",
    "nextclaw-server": "^0.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.2"
  }
}
