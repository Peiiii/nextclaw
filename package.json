{
  "name": "nextclaw-workspace",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -C packages/nextclaw build",
    "lint": "pnpm -C packages/nextclaw lint",
    "tsc": "pnpm -C packages/nextclaw tsc",
    "dev": "pnpm -C packages/nextclaw dev",
    "start": "pnpm -C packages/nextclaw start",
    "nextclaw": "pnpm -C packages/nextclaw dev",
    "dev:ui": "pnpm -C packages/nextclaw-ui dev",
    "changeset": "changeset",
    "release:check": "pnpm build && pnpm lint && pnpm tsc",
    "release:version": "pnpm changeset version",
    "release:publish": "pnpm release:check && pnpm changeset publish && pnpm changeset tag"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8"
  }
}
